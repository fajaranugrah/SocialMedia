<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <com.android.socialmedia.UtilitiesManager.TouchableRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:id="@+id/touch_image_stories"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle_light_blue"
            android:layout_marginTop="5dp">
            <ImageView
                android:id="@+id/icon_friends"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"
                android:src="@drawable/user"/>
        </com.android.socialmedia.UtilitiesManager.TouchableRelativeLayout>

        <ProgressBar
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/story_progress_bar"
            android:visibility="gone"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/story_progressbar"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/name_story"
            android:layout_below="@+id/touch_image_stories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Your"/>

        <ImageView
            android:id="@+id/your_account"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignBottom="@+id/touch_image_stories"
            android:layout_alignEnd="@+id/touch_image_stories"
            android:layout_alignRight="@+id/touch_image_stories"
            android:src="@drawable/plus" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>